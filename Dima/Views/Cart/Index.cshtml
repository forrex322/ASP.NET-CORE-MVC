@{
}

@model CartViewModel
<div class="container">
    @foreach (var el in Model.workOfCart.listOfCart)
    {
        <div class="alert alert-danger mt-3">
            <b>Продукт:</b> @el.product.name<br />
            <b>Цена:</b> @el.product.price.ToString("c")
        </div>
    }
    <hr />
    <div class="btn btn-danger" asp-controller="Order">Оплатить</div>
</div>
